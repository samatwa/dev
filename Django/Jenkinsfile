pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  serviceAccountName: jenkins-sa
  containers:
    - name: kaniko
      image: gcr.io/kaniko-project/executor:v1.16.0
      command:
        - sleep
      args:
        - 99d
    - name: git
      image: alpine/git
      command:
        - sleep
      args:
        - 99d
"""
    }
  }

  environment {
    ECR_REGISTRY = "794038256039.dkr.ecr.eu-north-1.amazonaws.com"
    IMAGE_NAME   = "final-project-ecr"
    IMAGE_TAG    = "v1.0.${BUILD_NUMBER}"

    AWS_REGION   = "eu-north-1"

    COMMIT_EMAIL = "jenkins@localhost"
    COMMIT_NAME  = "jenkins"
  }

  stages {

    stage('Build & Push Image (Kaniko â†’ ECR)') {
      steps {
        container('kaniko') {
          sh '''
            /kaniko/executor \
              --context $WORKSPACE/Django \
              --dockerfile $WORKSPACE/Django/Dockerfile \
              --destination=$ECR_REGISTRY/$IMAGE_NAME:$IMAGE_TAG \
              --cache=true
          '''
        }
      }
    }

    stage('Update Helm values.yaml (GitOps)') {
      steps {
        container('git') {
          withCredentials([
            usernamePassword(
              credentialsId: 'github-token',
              usernameVariable: 'GIT_USERNAME',
              passwordVariable: 'GIT_PAT'
            )
          ]) {
            sh '''
              git clone https://$GIT_USERNAME:$GIT_PAT@github.com/samatwa/dev.git
              cd dev/charts/django-app

              sed -i "s|tag: .*|tag: $IMAGE_TAG|" values.yaml

              git config user.email "$COMMIT_EMAIL"
              git config user.name "$COMMIT_NAME"

              git add values.yaml
              git commit -m "ci: update image tag to $IMAGE_TAG"
              git push origin main
            '''
          }
        }
      }
    }
  }
}